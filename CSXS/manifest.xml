<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   Version="12.0"
                   ExtensionBundleId="com.supertracery.panel"
                   ExtensionBundleVersion="1.0.0"
                   ExtensionBundleName="SuperTracery">

    <ExtensionList>
        <Extension Id="com.supertracery.panel.main" Version="1.0.0" />
    </ExtensionList>

    <ExecutionEnvironment>
        <HostList>
            <Host Name="AEFT" Version="[23.0,99.0]" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="12.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>

    <DispatchInfoList>
        <Extension Id="com.supertracery.panel.main">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/bridge.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--allow-file-access</Parameter>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>SuperTracery</Menu>
                    <Geometry>
                        <Size>
                            <Height>600</Height>
                            <Width>320</Width>
                        </Size>
                        <MinSize>
                            <Height>400</Height>
                            <Width>240</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>2000</Height>
                            <Width>800</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons />
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>

</ExtensionManifest>
